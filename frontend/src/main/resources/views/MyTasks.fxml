<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.smarttask_frontend.tasks.controller.MyTasksController"
            prefWidth="1100" prefHeight="700"
            stylesheets="@../styles/tasks.css">

    <top>
        <HBox spacing="15" alignment="CENTER_LEFT" styleClass="header-bar">
            <Label text="My Tasks" styleClass="header-title"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Button text="âœ¨ AI Generate" styleClass="button, ai-button" onAction="#aiGenerate"/>
            <Button text="+ Add Task" styleClass="button, add-button" onAction="#createTask"/>
        </HBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.70">

            <!-- LEFT SIDE: TABPANE -->
            <TabPane tabClosingPolicy="UNAVAILABLE">

                <Tab text="My Tasks">
                    <VBox spacing="10">
                        <padding>
                            <Insets top="20" right="20" bottom="20" left="20"/>
                        </padding>

                        <TableView fx:id="taskTable" VBox.vgrow="ALWAYS">
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                            <columns>
                                <TableColumn fx:id="titleColumn" text="Task Name"/>
                                <TableColumn fx:id="priorityColumn" text="Priority"/>
                                <TableColumn fx:id="categoryColumn" text="Category"/>
                                <TableColumn fx:id="dueDateColumn" text="Due Date"/>
                                <TableColumn fx:id="statusColumn" text="Status"/>
                                <TableColumn fx:id="subTasksColumn" text="" maxWidth="80"/>
                                <TableColumn fx:id="shareColumn" text="" maxWidth="80"/>
                            </columns>
                        </TableView>
                    </VBox>
                </Tab>

                <Tab text="Shared With Me">
                    <VBox spacing="10">
                        <padding>
                            <Insets top="20" right="20" bottom="20" left="20"/>
                        </padding>

                        <TableView fx:id="sharedTasksTable" VBox.vgrow="ALWAYS">
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                            <columns>
                                <TableColumn fx:id="sharedTitleColumn" text="Task Name"/>
                                <TableColumn fx:id="sharedPriorityColumn" text="Priority"/>
                                <TableColumn fx:id="sharedCategoryColumn" text="Category"/>
                                <TableColumn fx:id="sharedDueDateColumn" text="Due Date"/>
                                <TableColumn fx:id="sharedStatusColumn" text="Status"/>
                                <TableColumn fx:id="sharedSubTasksColumn" text=""/>
                            </columns>
                        </TableView>
                    </VBox>
                </Tab>

            </TabPane>

            <!-- RIGHT SIDE: ONE GLOBAL COMMENT SIDEBAR -->
            <VBox spacing="15" styleClass="comment-panel">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>

                <Label text="Comments" styleClass="section-title"/>

                <ListView fx:id="commentList" VBox.vgrow="ALWAYS"/>

                <HBox spacing="10" alignment="CENTER">
                    <Button text="ðŸ“Ž" onAction="#attachFile" styleClass="button attach-button"/>

                    <TextField fx:id="commentField"
                               HBox.hgrow="ALWAYS"
                               promptText="Write a comment..."/>

                    <Button text="Send"
                            onAction="#sendComment"
                            styleClass="button"/>
                </HBox>
            </VBox>

        </SplitPane>
    </center>

</BorderPane>